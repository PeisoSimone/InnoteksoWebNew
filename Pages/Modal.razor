@namespace innoteksoWebNew.Shared

<div class="modal fade @(IsVisible ? "show" : "")" id="@ModalId" tabindex="-1"
     style="display: @(IsVisible ? "block" : "none")" aria-hidden="@(!IsVisible)">
    <div class="modal-dialog @(IsScrollable ? "modal-dialog-scrollable" : "") @Size">
        <div class="modal-content">
            @if (!string.IsNullOrEmpty(Title))
            {
                <div class="modal-header">
                    <h5 class="modal-title">@Title</h5>
                    <button type="button" class="btn-close" @onclick="HideAsync" aria-label="Close"></button>
                </div>
            }
            <div class="modal-body">
                @BodyTemplate
            </div>
            @if (FooterTemplate != null)
            {
                <div class="modal-footer">
                    @FooterTemplate
                </div>
            }
        </div>
    </div>
</div>

@if (IsVisible)
{
    <div class="modal-backdrop fade show" @onclick="HideAsync"></div>
}

@code {
    [Parameter] public string ModalId { get; set; } = $"modal-{Guid.NewGuid():N}";
    [Parameter] public string? Title { get; set; }
    [Parameter] public RenderFragment? BodyTemplate { get; set; }
    [Parameter] public RenderFragment? FooterTemplate { get; set; }
    [Parameter] public bool IsScrollable { get; set; } = false;
    [Parameter] public string Size { get; set; } = ""; // Can be "modal-sm", "modal-lg", "modal-xl"

    private bool IsVisible { get; set; } = false;

    public async Task ShowAsync()
    {
        IsVisible = true;
        StateHasChanged();
        await Task.CompletedTask;
    }

    public async Task HideAsync()
    {
        IsVisible = false;
        StateHasChanged();
        await Task.CompletedTask;
    }
}
